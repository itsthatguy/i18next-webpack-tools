{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "dist",
    "stripInternal": true,
    "target": "es5"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "__tests__/fixtures/**/*"
  ],
  // "files": [
  //   "./__tests__/fixtures/index.tsx",
  //   "./__tests__/fixtures/parent.tsx",
  //   "./__tests__/fixtures/child.tsx",
  //   "./src/i18n-json-transform-webpack-plugin.ts",
  //   "./src/i18n-json-webpack-loader.ts"
  // ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false
  }
}
